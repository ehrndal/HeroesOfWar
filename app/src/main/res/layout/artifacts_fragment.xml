<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/app_background"
    android:orientation="vertical"
    tools:context=".MainActivity$PlaceholderFragment">

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artifactGridView"
        android:numColumns="3"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/artifactLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/artifactGridView"
        android:layout_marginTop="20dp"
        android:text=""
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/artifactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/artifactLbl"
        android:layout_alignTop="@+id/artifactLbl"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text=""/>
    <View
        android:id="@+id/effectBkgrnd"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/effect_bkgrnd"
        android:layout_below="@+id/artifactName"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/effectLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/artifactName"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:text=""
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/effectDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/effectLbl"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:text=""/>
</RelativeLayout>
